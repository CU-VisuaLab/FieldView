<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.example.keke.notebook.EditorActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editText"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/add_title_here"
        android:inputType="textCapSentences"
        android:textColor="#145844"
        android:textColorHint="#51766e"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_date"
        app:layout_constraintStart_toEndOf="@+id/tv_add_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="129dp"
        android:hint="@string/add_date"
        android:textColorHint="#51766e"
        app:layout_constraintEnd_toStartOf="@+id/ImageName"
        app:layout_constraintStart_toEndOf="@+id/date_icon"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_language_black_24dp" />

    <ImageView
        android:id="@+id/date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toTopOf="@+id/longEditext"
        app:layout_constraintEnd_toStartOf="@+id/tv_add_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/longEditext"
        app:srcCompat="@mipmap/ic_date_range_black_24dp" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginBottom="101dp"
        android:layout_marginTop="101dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="@+id/mountainIcon"
        app:layout_constraintTop_toTopOf="@+id/editText"
        app:srcCompat="@mipmap/ic_location_on_black_24dp" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="59dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:background="#44369136"
        android:text="Map"
        android:textColor="#51766e"
        app:layout_constraintBottom_toBottomOf="@+id/takePicture"
        app:layout_constraintStart_toEndOf="@+id/longEditext"
        app:layout_constraintTop_toTopOf="@+id/takePicture" />


    <TextView
        android:id="@+id/Longitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="4dp"
        android:text="Longitude"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/Latitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/longEditext"
        app:layout_constraintTop_toTopOf="@+id/latEditext" />

    <TextView
        android:id="@+id/ImageName"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="60dp"
        android:text="Image: None"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/Longitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_add_date"
        app:layout_constraintTop_toTopOf="@+id/editText" />

    <TextView
        android:id="@+id/Latitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="7dp"
        android:text="Latitude"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/elevationEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/elevationEditText"
        app:layout_constraintTop_toTopOf="@+id/mountainIcon" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginBottom="190dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="190dp"
        android:background="#0000"
        android:onClick="openViz_ar2d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_add_date"
        app:srcCompat="@drawable/ar2dbtn" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="#0000"
        android:onClick="openViz_ar3d"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:srcCompat="@drawable/ar3dbtn" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:background="#0000"
        android:onClick="openViz_vr2d"
        app:layout_constraintStart_toEndOf="@+id/imageButton1"
        app:layout_constraintTop_toTopOf="@+id/imageButton1"
        app:srcCompat="@drawable/vr2dbtn" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="#0000"
        android:onClick="openViz_3d"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        app:srcCompat="@drawable/btn3d" />


    <ImageButton
        android:id="@+id/takePicture"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="36dp"
        android:background="#0000"
        android:onClick="takePicture"
        app:layout_constraintBottom_toBottomOf="@+id/ImageName"
        app:layout_constraintEnd_toEndOf="@+id/ImageName"
        app:layout_constraintStart_toEndOf="@+id/btnMap"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera_alt_black_48dp"
        tools:ignore="OnClick" />


    <Button
        android:id="@+id/localSync"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#44369136"
        android:text="Sync to Local Team"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/getData"
        app:layout_constraintEnd_toEndOf="@+id/setLocation"
        app:layout_constraintStart_toStartOf="@+id/setLocation"
        app:layout_constraintTop_toTopOf="@+id/getData" />

    <Button
        android:id="@+id/setLocation"
        android:layout_width="133dp"
        android:layout_height="32dp"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="37dp"
        android:background="#44369136"
        android:text="Set Location"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/getData"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

    <Button
        android:id="@+id/postData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#44369136"
        android:text="Post Data"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/setLocation"
        app:layout_constraintEnd_toEndOf="@+id/getData"
        app:layout_constraintStart_toStartOf="@+id/getData"
        app:layout_constraintTop_toTopOf="@+id/setLocation" />

    <Button
        android:id="@+id/getData"
        android:layout_width="133dp"
        android:layout_height="33dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="12dp"
        android:background="#44369136"
        android:onClick="pullData"
        android:text="Get Data"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/localSync" />

    <ImageView
        android:id="@+id/mountainIcon"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/longEditext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_icon"
        app:srcCompat="@drawable/mountain" />

    <EditText
        android:id="@+id/elevationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/add_elevation_here"
        android:inputType="numberDecimal"
        android:textColor="#145844"
        android:textColorHint="#51766e"
        app:layout_constraintEnd_toStartOf="@+id/Latitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mountainIcon" />

    <EditText
        android:id="@+id/longEditext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/add_long_here"
        android:textColor="#145844"
        android:textColorHint="#51766e"
        app:layout_constraintEnd_toStartOf="@+id/Longitude"
        app:layout_constraintStart_toEndOf="@+id/mountainIcon"
        app:layout_constraintTop_toTopOf="@+id/tv_add_date" />

    <EditText
        android:id="@+id/latEditext"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:hint="@string/add_lat_here"
        android:textColor="#145844"
        android:textColorHint="#51766e"
        app:layout_constraintBottom_toTopOf="@+id/elevationEditText"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_date"
        app:layout_constraintStart_toEndOf="@+id/tv_add_date" />


</android.support.constraint.ConstraintLayout>
